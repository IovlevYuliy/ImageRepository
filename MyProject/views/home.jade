extends layout

block styles
    link( href="/stylesheets/bootstrap-tokenfield.css" type="text/css" rel="stylesheet")

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
                        div.signup-wall
                            ul.user-details
                                li Username ---> #{user.username}
                                li Email    ---> #{user.email}
                                li First Name ---> #{user.firstName}
                                li Last Name ---> #{user.lastName}

                        a(href='/signout', class='text-center new-account') Sign Out*/
    a#addimage.link(href='#') Добавить изображение

    #addmodal.modal.fade(role='dialog')
        .modal-dialog(style='width:800px;height:700px')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal') ×
                    h4.modal-title Добавить изображение
                .modal-body
                    .form-group
                        .col-lg-6
                            img#image(src='')
                            label Размер:
                            li#size
                            li#weight
                            label Дата загрузки:
                            li#date
                            input#openimage.btn-small(type='file', name='Открыть')
                            label Дополнительно
                            input#addinfo.form-control.input-lg(type='text')
                        .row
                            .col-lg-6
                                label Файл:
                                input#nmDefault.form-control(type='text')
                                label Название:
                                input#newName.form-control(type='text')
                                label Теги(Группы):
                                input#tags.token-input(type='text', autocomplete='off', placeholder='Введите теги', tabindex='0', style='width: 370px;')
                                label Описание
                                textarea#descript.form-control.input-lg(rows='4')


                .modal-footer
                        button#addok.btn.btn-default(type='button' formaction='/addimage') Добавить
                        button.btn.btn-default(type='button', data-dismiss='modal') Закрыть

block scripts
    script(src='../javascripts/bootstrap-tokenfield.js')
    script(type='text/javascript').
        $(document).ready(function () {
            $('#tags').tokenfield({
                limit: 10,
                delay: 100
            });
        });