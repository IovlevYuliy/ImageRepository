doctype html
html
   head
     meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
     link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
     link(rel='stylesheet', href='/stylesheets/jquery.fancybox.css', type='text/css', media='screen')
     style.
         .thumb img {
             filter: none; /* IE6-9 */
             -webkit-filter: grayscale(0);
             border-radius: 5px;
             background-color: #fff;
             border: 1px solid #ddd;
             padding: 5px;
         }

         .thumb {
             padding: 5px;
         }

    body
     form(action='/upload', enctype='multipart/form-data', method='post')
         input(type='file', name='upload', multiple='multiple')
         input(type="submit", value="upload")
         form(action='/nextImg', method='post')
         button(onclick='nextImg()') Click
         img(src="../images/" + path)

     .container
       - var count = 0;
       each item in fls
           if count < fls.length
                   .col-md-3.col-sm-4.col-xs-6.thumb
                       a.fancyimage(rel='group', href='/images/' + item.name)
                            img.img-responsive(src='/images/' + item.name)
                       .caption
                           h4(align = 'center') #{item.name}
           - count++;
script(src='/javascripts/jquery-1.11.2.min.js')
script(src='/javascripts/bootstrap.min.js')
script(type='text/javascript', src='/javascripts/jquery.fancybox.pack.js')
script(type='text/javascript').
    $(document).ready(function() {
        $("a.fancyimage").fancybox();
    });
